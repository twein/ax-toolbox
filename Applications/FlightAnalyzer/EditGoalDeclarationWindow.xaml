<Window x:Class="FlightAnalyzer.EditGoalDeclarationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gps="clr-namespace:AXToolbox.GpsLoggers;assembly=AXToolbox.GpsLoggers"    
        Height="100" Width="400">
    <Window.Resources>
        <gps:GoalDeclarationConverter x:Key="converter" />
    </Window.Resources>
    <DockPanel Margin="5">
        <StackPanel DockPanel.Dock="Top">
            <TextBox Name="textBox" Text="{Binding Declaration, Converter={StaticResource converter}}"/>
        </StackPanel>
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button Click="buttonOk_Click">OK</Button>
            <Button Click="buttonCancel_Click">Cancel</Button>
        </WrapPanel>
    </DockPanel>
</Window>
