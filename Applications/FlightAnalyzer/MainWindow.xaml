<Window x:Class="FlightAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:maps="clr-namespace:AXToolbox.MapViewer;assembly=AXToolbox.MapViewer"
        xmlns:scripting="clr-namespace:AXToolbox.Scripting;assembly=AXToolbox.Scripting"
        xmlns:converters="clr-namespace:AXToolbox.Model.Converters;assembly=AXToolbox.Model"    
        Title="MainWindow" MinWidth="1024" MinHeight="576" WindowState="Maximized"
        Loaded="Window_Loaded"
        Closed="Window_Closed" Icon="/FlightAnalyzer;component/balloon.ico">
    <Window.Resources>
        <converters:IsNullVisibilityConverter x:Key="isNullVisibilityConverter" />
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <StatusBar Height="23" Name="statusBar1" DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="textZoom" Text="{Binding ElementName=MapViewer, Path=ZoomLevelPct, StringFormat=Zoom: {0:0.00}%}" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock>
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Mouse pointer: {0:0},{1:0}">
                            <Binding ElementName="MapViewer" Path="MousePointerPosition.X" />
                            <Binding ElementName="MapViewer" Path="MousePointerPosition.Y" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding Path=TrackPointer, StringFormat=Track pointer: {0}}"/>
            </StatusBarItem>
        </StatusBar>
        <ScrollViewer VerticalScrollBarVisibility="Auto" DockPanel.Dock="Left">
            <StackPanel Orientation="Vertical" Width="400">
                <Expander ExpandDirection="Down" Background="LightGray">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <StackPanel Orientation="Vertical">
                                <TextBlock VerticalAlignment="Top" FontWeight="Bold">Script</TextBlock>
                                <TextBlock VerticalAlignment="Top" Text="{Binding Path=Engine.ShortDescription}"></TextBlock>
                            </StackPanel>
                            <Button Height="22" ToolTip="Load script file" Click="loadScriptButton_Click">Load</Button>
                            <Button Height="22" ToolTip="Show the tools window" Click="toolsButton_Click">Tools</Button>
                        </StackPanel>
                    </Expander.Header>
                    <ListBox ItemsSource="{Binding Path=Engine.Log}" Visibility="{Binding Path=Engine, Converter={StaticResource isNullVisibilityConverter}}"/>
                </Expander>

                <Expander ExpandDirection="Down" Background="LightGray" IsExpanded="True" >
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <StackPanel Orientation="Vertical">
                                <TextBlock VerticalAlignment="Top" FontWeight="Bold">Report</TextBlock>
                                <TextBlock VerticalAlignment="Top" Text="{Binding Path=Report.ShortDescription}"></TextBlock>
                            </StackPanel>
                            <Button Height="22" ToolTip="Load gps log file or a flight report" Click="loadReportButton_Click"
                                    Visibility="{Binding Path=Engine, Converter={StaticResource isNullVisibilityConverter}}">Load</Button>
                            <Button Height="22" Name="setLaunchButton" ToolTip="Sets the launch point to the current pointer position" Click="setLaunchLandingButton_Click"
                                    Visibility="{Binding Path=Report, Converter={StaticResource isNullVisibilityConverter}}">Set launch</Button>
                            <Button Height="22" Name="setLandingButton" ToolTip="Sets the landing point to the current pointer position" Click="setLaunchLandingButton_Click"
                                    Visibility="{Binding Path=Report, Converter={StaticResource isNullVisibilityConverter}}">Set landing</Button>
                            <Button Height="22" ToolTip="Process the current report" Click="processReportButton_Click"
                                    Visibility="{Binding Path=Report, Converter={StaticResource isNullVisibilityConverter}}">Process</Button>
                        </StackPanel>
                    </Expander.Header>
                    <StackPanel Orientation="Vertical" >
                        <ListBox ItemsSource="{Binding Path=Report.Markers}" Visibility="{Binding Path=Report, Converter={StaticResource isNullVisibilityConverter}}"/>
                        <ListBox ItemsSource="{Binding Path=Report.DeclaredGoals}" Visibility="{Binding Path=Report, Converter={StaticResource isNullVisibilityConverter}}"/>
                        <ListBox ItemsSource="{Binding Path=Report.Notes}" Visibility="{Binding Path=Report, Converter={StaticResource isNullVisibilityConverter}}"/>
                    </StackPanel>
                    <!--<TextBlock TextWrapping="Wrap" Background="White" Text="{Binding Path=Report.Notes}"/>-->
                </Expander>
            </StackPanel>
        </ScrollViewer>
        <Border BorderBrush="Black" BorderThickness="1">
            <maps:MapViewerControl Name="MapViewer" />
        </Border>
    </DockPanel>
</Window>
