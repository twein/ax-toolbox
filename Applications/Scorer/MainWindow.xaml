<Window x:Class="Scorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dg="http://schemas.microsoft.com/wpf/2008/toolkit"
        xmlns:local="clr-namespace:Scorer"
        Title="MainWindow" Height="600" Width="1024">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Pilots" Click="menuPilots_Click"></MenuItem>
            <MenuItem Header="Competitions"></MenuItem>
            <MenuItem Header="Tasks"></MenuItem>
        </Menu>
        <StatusBar Height="23" Name="statusBar1" DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock/>
            </StatusBarItem>
        </StatusBar>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="0">
                <StackPanel Orientation="Vertical">
                    <Expander ExpandDirection="Down" Background="LightGray">
                        <Expander.Header>
                            <TextBlock VerticalAlignment="Top" FontWeight="Bold" Margin="0,0,5,0">Pilots</TextBlock>
                        </Expander.Header>
                        <StackPanel Orientation="Vertical">
                            <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Top">
                                <!--<Button Name="Import" ToolTip="Import pilot list" Click="importPilotsButton_Click">Load</Button>-->
                            </WrapPanel>
                            <ListBox ItemsSource="{Binding Path=db.Pilots}"/>
                        </StackPanel>
                    </Expander>
                    <Expander ExpandDirection="Down" Background="LightGray">
                        <Expander.Header>
                            <TextBlock VerticalAlignment="Top" FontWeight="Bold" Margin="0,0,5,0">Competitions</TextBlock>
                        </Expander.Header>
                        <StackPanel Orientation="Vertical">
                            <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Button ToolTip="Load competition list" Click="loadCompetitionsButton_Click">Load</Button>
                            </WrapPanel>
                            <ListBox ItemsSource=""/>
                        </StackPanel>
                    </Expander>
                    <Expander ExpandDirection="Down" Background="LightGray">
                        <Expander.Header>
                            <TextBlock VerticalAlignment="Top" FontWeight="Bold" Margin="0,0,5,0">Tasks</TextBlock>
                        </Expander.Header>
                        <StackPanel Orientation="Vertical">
                            <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Button ToolTip="Load task results" Click="loadTaskResultsButton_Click">Load</Button>
                            </WrapPanel>
                            <ListBox ItemsSource=""/>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
            <GridSplitter Background="LightGray" Grid.Column="1" Height="Auto" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            <TabControl Name="ItemsTab" Grid.Column="2"/>
        </Grid>
    </DockPanel>
</Window>
