<Window x:Class="Scorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dg="http://schemas.microsoft.com/wpf/2008/toolkit"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DataGrid Name="dgMain">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding Path=PilotNumber}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Path=PilotName}"/>
                <DataGridTextColumn Header="Measure" Binding="{Binding Path=ManualMeasure}"/>
                <DataGridTextColumn Header="MPenalty" Binding="{Binding Path=ManualMeasurePenalty}"/>
                <DataGridTextColumn Header="TSPenalty" Binding="{Binding Path=ManualTaskScorePenalty}"/>
                <DataGridTextColumn Header="CSPenalty" Binding="{Binding Path=ManualCompetitionScorePenalty}"/>
                <DataGridTextColumn Header="Rules" Binding="{Binding Path=ManualInfringedRules}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
