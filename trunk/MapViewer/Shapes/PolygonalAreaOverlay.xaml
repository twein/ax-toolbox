<maps:MapOverlay
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="AXToolbox.MapViewer.PolygonalAreaOverlay"
    xmlns:maps="clr-namespace:AXToolbox.MapViewer"
    IsHitTestVisible="False" >
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" CacheMode="BitmapCache">
        <Polygon Name="area" Stroke="Black" Fill="Red" StrokeThickness="1" Points="0,0 100,75 150,30" Opacity="0.25"/>
        <TextBlock Name="label" Height="23" MinWidth="23" HorizontalAlignment="Center" VerticalAlignment="Center" 
              Padding="4">Label</TextBlock>
    </Grid>
</maps:MapOverlay>
