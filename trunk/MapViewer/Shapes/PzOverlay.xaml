<maps:MapOverlay
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="AXToolbox.MapViewer.PzOverlay" 
    xmlns:maps="clr-namespace:AXToolbox.MapViewer"
    IsHitTestVisible="False" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="105" d:DesignWidth="116">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
        <Ellipse Name="area" Height="100" Width="100" Margin="-50" HorizontalAlignment="Left" VerticalAlignment="Top"
                 Fill="Blue" Stroke="Black" Opacity=".25" />
        <Path Name="center" Height="1" Width="1" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Top"
              Stroke="Black" 
              Data="M-1,0 L1,0 M0,-1 L0,1" />
        <TextBlock Name="label" Margin="0" Height="23" MinWidth="23" HorizontalAlignment="Left"
              Padding="4">Label</TextBlock>
    </Grid>
</maps:MapOverlay>