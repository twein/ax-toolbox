<Window x:Class="FlightAnalyzer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:FlightAnalyzer"
   	xmlns:map="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
    Title="Flight Analyzer" MinWidth="800" MinHeight="600"
    ResizeMode="CanResizeWithGrip" WindowState="Maximized"
    KeyDown="MainWindow_KeyDown" Loaded="MainWindow_Loaded" Drop="MainWindow_Drop" AllowDrop="True">
    <Window.Resources>
        <Style x:Key="labelStyle">
            <Setter Property="Control.Margin" Value="5"/>
            <Setter Property="Control.Width" Value="150"/>
            <Setter Property="Control.VerticalAlignment" Value="Top"/>
            <Setter Property="Control.HorizontalAlignment" Value="Left"/>
        </Style>
        <Style x:Key="valueStyle">
            <Setter Property="Control.Margin" Value="5,0,5,5"/>
            <Setter Property="Control.Width" Value="300"/>
            <Setter Property="Control.VerticalAlignment" Value="Top"/>
            <Setter Property="Control.Background" Value="LightGray"/>
            <Setter Property="Control.HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="(c) 2009-2010 balloonerds.com"/>
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Expander Grid.Column="0" ExpandDirection="Left" IsExpanded="True" Width="Auto" >
                <StackPanel Orientation="Vertical">
                    <TextBlock Style="{StaticResource labelStyle}">Date:</TextBlock>
                    <TextBlock Style="{StaticResource valueStyle}" Background="LightGray" 
                                       Text="{Binding Path=Date,StringFormat='dd/MM/yyyy', Mode=OneWay}">
                    </TextBlock>
                    <TextBlock Style="{StaticResource labelStyle}">Pilot:</TextBlock>
                    <TextBlock Style="{StaticResource valueStyle}" Background="LightGray" 
                                       Text="{Binding Path=PilotId, Mode=TwoWay}">
                    </TextBlock>

                    <TextBlock Style="{StaticResource labelStyle}">Launch point:</TextBlock>
                    <TextBlock Style="{StaticResource valueStyle}" Background="LightGray" 
                                       Text="{Binding Path=LaunchPoint, Mode=OneWay}">
                    </TextBlock>
                    <TextBlock Style="{StaticResource labelStyle}">Landing point:</TextBlock>
                    <TextBlock Style="{StaticResource valueStyle}" Background="LightGray" 
                                       Text="{Binding Path=LandingPoint, Mode=OneWay}">
                    </TextBlock>

                    <TextBlock Style="{StaticResource labelStyle}">Markers:</TextBlock>
                    <ListBox Style="{StaticResource valueStyle}" Background="LightGray" 
                                 MinHeight="50" Height="Auto"
                                 ItemsSource="{Binding Path=Markers, Mode=OneWay}"
                                 MouseLeftButtonUp="ListBox_MouseLeftButtonUp">
                    </ListBox>
                    <TextBlock Style="{StaticResource labelStyle}">Declared goals:</TextBlock>
                    <ListBox Style="{StaticResource valueStyle}" 
                                 MinHeight="50" Height="Auto"
                                 ItemsSource="{Binding Path=DeclaredGoals, Mode=OneWay}"
                                 MouseLeftButtonUp="ListBox_MouseLeftButtonUp">
                    </ListBox>
                    <TextBlock Style="{StaticResource labelStyle}">Notes:</TextBlock>
                    <ListBox Style="{StaticResource valueStyle}" 
                                 MinHeight="50" Height="Auto"
                                 ItemsSource="{Binding Path=Notes, Mode=OneWay}"
                                 MouseLeftButtonUp="ListBox_MouseLeftButtonUp">
                    </ListBox>
                </StackPanel>
            </Expander>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Name="textblockCursor" Style="{StaticResource valueStyle}" FontSize="12" FontWeight="Bold" Width="Auto">Pointer</TextBlock>
                <map:GMapControl x:Name="MainMap" Grid.Row="1"
                                 BorderBrush="Gray" BorderThickness="0.5"
                                 Height="Auto"/>
                <Grid Grid.Row="1" Height="Auto">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <RadioButton Name="radioLogger"
                                     Margin="5,0,5,0" GroupName="track" IsChecked="True"
                                     Checked="radio_Checked">
                            Logger
                        </RadioButton>
                        <RadioButton Name="radioClean"
                                     Margin="5,0,5,0" GroupName="track"
                                     Checked="radio_Checked">
                            Clean
                        </RadioButton>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <Slider Name="sliderTime" Grid.Column="1"
                            Margin="5" ValueChanged="slider_ValueChanged" SmallChange="1" LargeChange="10">
                        </Slider>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <CheckBox Name="checkLock" 
                                  Margin="5" HorizontalAlignment="Center" 
                                  Checked="checkLock_Checked">
                            Lock
                        </CheckBox>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
