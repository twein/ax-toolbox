<Window x:Class="FlightAnalyzer.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:validation="clr-namespace:AXToolbox.Model.Validation;assembly=AXToolbox.Model"        
    xmlns:converters="clr-namespace:AXToolbox.Model.Converters;assembly=AXToolbox.Model"        
    Title="Flight settings" 
		SizeToContent="WidthAndHeight" ShowInTaskbar="False" Topmost="True"
		WindowStartupLocation="CenterOwner" WindowStyle="ThreeDBorderWindow" ResizeMode="NoResize" 
		Closing="Window_Closed" Loaded="Window_Loaded" Icon="/FlightAnalyzer;component/balloon.ico">
    <Window.Resources>
        <converters:NotConverter x:Key="notConverter" />
        <converters:DateConverter x:Key="dateConverter" />
        <Style x:Key="defaultStyle">
            <Setter Property="Control.Margin" Value="5"/>
            <Setter Property="Control.Width" Value="200"/>
            <Setter Property="Control.VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Orientation="Vertical">

            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource defaultStyle}">Date:</Label>
                <TextBox Style="{StaticResource defaultStyle}" >
                    <TextBox.Text>
                        <Binding Path="Date" Converter="{StaticResource dateConverter}">
                            <Binding.ValidationRules>
                                <validation:DateValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource defaultStyle}">Time of day:</Label>
                <RadioButton GroupName="rbGroup" Style="{StaticResource defaultStyle}" Width="Auto" IsChecked="{Binding Path=Am,Mode=TwoWay}" Content="AM"  />
                <RadioButton GroupName="rbGroup" Style="{StaticResource defaultStyle}" Width="Auto"  IsChecked="{Binding Path=Am, Converter={StaticResource notConverter}}" Content="PM" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource defaultStyle}">Time zone:</Label>
                <TextBox Style="{StaticResource defaultStyle}">
                    <TextBox.Text>
                        <Binding Path="TimeZone">
                            <Binding.ValidationRules>
                                <validation:TimeSpanValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource defaultStyle}">Datum:</Label>
                <TextBox Style="{StaticResource defaultStyle}"  Text="{Binding Path=Datum}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource defaultStyle}">UTM Zone:</Label>
                <TextBox Style="{StaticResource defaultStyle}" Text="{Binding Path=UtmZone}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource defaultStyle}">QNH:</Label>
                <TextBox Style="{StaticResource defaultStyle}" Text="{Binding Path=Qnh}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource defaultStyle}">Allowed goals file:</Label>
                <TextBox Name="textBoxWptFileName" Style="{StaticResource defaultStyle}" IsReadOnly="True">
                    <TextBox.Text>
                        <Binding Path="GoalsFile">
                            <Binding.ValidationRules>
                                <validation:FileNameValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <Button Name="buttonWptFile" Style="{StaticResource defaultStyle}" Width="26" Click="buttonWptFile_Click">...</Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource defaultStyle}">Default altitude (m):</Label>
                <TextBox Style="{StaticResource defaultStyle}" Text="{Binding Path=DefaultAltitude}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource defaultStyle}">Minimum velocity (m/s):</Label>
                <TextBox Style="{StaticResource defaultStyle}" Text="{Binding Path=MinVelocity}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource defaultStyle}">Maximum acceleration (m/s2):</Label>
                <TextBox Style="{StaticResource defaultStyle}" Text="{Binding Path=MaxAcceleration}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource defaultStyle}">Interpolation interval (s):</Label>
                <TextBox Style="{StaticResource defaultStyle}" Text="{Binding Path=InterpolationInterval}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button IsDefault="True" Margin="5" MinWidth="75" Click="buttonOk_Click">OK</Button>
                <Button Margin="5" MinWidth="75" Click="buttonReset_Click">Default</Button>
                <Button IsCancel="True" Margin="5" MinWidth="75" Click="buttonCancel_Click">Cancel</Button>
            </StackPanel>
        </StackPanel>
