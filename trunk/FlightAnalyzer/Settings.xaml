<Window x:Class="FlightAnalyzer.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:props="clr-namespace:FlightAnalyzer.Properties"        
    Title="Flight settings" 
		SizeToContent="WidthAndHeight" ShowInTaskbar="False" Topmost="True"
		WindowStartupLocation="CenterOwner" WindowStyle="ThreeDBorderWindow" ResizeMode="NoResize" 
		Closing="Window_Closed" >
	<Window.Resources>
		<props:Settings x:Key="settings" />
	</Window.Resources>
	<Grid DataContext="{StaticResource settings}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*" MinWidth="150"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Label Margin="5" Grid.Row="0" Grid.Column="0">Time zone:</Label>
		<TextBox Margin="5" Grid.Row="0" Grid.Column="1" Text="{Binding Path=Default.TimeZone}"/>

		<Label Margin="5" Grid.Row="1" Grid.Column="0">Datum:</Label>
		<TextBox Margin="5" Grid.Row="1" Grid.Column="1"  Text="{Binding Path=Default.Datum}"/>

		<Label Margin="5" Grid.Row="2" Grid.Column="0">UTM Zone:</Label>
		<TextBox Margin="5" Grid.Row="2" Grid.Column="1" Text="{Binding Path=Default.UTMZone}"/>

		<Label Margin="5" Grid.Row="3" Grid.Column="0">QNH:</Label>
		<TextBox Margin="5" Grid.Row="3" Grid.Column="1" Text="{Binding Path=Default.QNH}"/>

		<Label Margin="5" Grid.Row="4" Grid.Column="0">Minimum velocity (m/s):</Label>
		<TextBox Margin="5" Grid.Row="4" Grid.Column="1"  Text="{Binding Path=Default.MinVelocity}"/>

		<Label Margin="5" Grid.Row="5" Grid.Column="0">Maximum acceleration (m/s2):</Label>
		<TextBox Margin="5" Grid.Row="5" Grid.Column="1" Text="{Binding Path=Default.MaxAcceleration}"/>

		<Label Margin="5" Grid.Row="6" Grid.Column="0">Interpolation interval (s):</Label>
		<TextBox Margin="5" Grid.Row="6" Grid.Column="1" Text="{Binding Path=Default.InterpolationInterval}"/>
		
		<StackPanel Orientation="Horizontal" Grid.Row="7" Grid.ColumnSpan="2" HorizontalAlignment="Right">
			<Button Name="buttonSave" IsDefault="True" Margin="5" MinWidth="75" Click="buttonSave_Click">OK</Button>
			<Button Name="buttonReset" Margin="5" MinWidth="75" Click="buttonReset_Click">Default</Button>
			<Button Name="buttonCancel"  IsCancel="True" Margin="5" MinWidth="75" Click="buttonCancel_Click">Cancel</Button>
		</StackPanel>
	</Grid>
</Window>
