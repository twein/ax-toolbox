<Window x:Class="FlightAnalyzer.Input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="175" Width="350" MinHeight="175" MinWidth="350"
        FocusManager.FocusedElement="{Binding ElementName=textBoxValue}" ResizeMode="NoResize" ShowInTaskbar="True" Topmost="False" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" Icon="/FlightAnalyzer;component/balloon.ico">
    <Grid>
        <TextBlock Height="23" Margin="12,12,12,0" Name="textBlockLabel" VerticalAlignment="Top" Text="{Binding Path=Prompt}"/>
        <TextBox Height="23" Margin="12,36,12,0" Name="textBoxValue" VerticalAlignment="Top" Text="{Binding Path=Value}"/>
        <TextBlock Height="23" Margin="12,61,12,0" Name="textBlockError" VerticalAlignment="Top" Foreground="Red"/>
        <StackPanel Margin="0,0,12,12" Orientation="Horizontal" HorizontalAlignment="Right" Height="34" VerticalAlignment="Bottom">
            <Button IsDefault="True" Margin="5" MinWidth="50" Click="buttonOk_Click">OK</Button>
            <Button IsCancel="True" Margin="5" MinWidth="50" Click="buttonCancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
