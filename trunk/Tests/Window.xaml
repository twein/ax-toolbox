<Window x:Class="AXToolbox.Tests.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Test" Height="480" Width="800" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Name="buttonLoad" VerticalAlignment="Top" Height="23" Width="75" Click="buttonLoad_Click">Load</Button>
            <Button Name="buttonSave" VerticalAlignment="Top" Height="23" Width="75" Click="buttonSave_Click">Save</Button>
            <Button Name="buttonPopulate" VerticalAlignment="Top" Height="23" Width="75" Click="buttonPopulate_Click">Populate</Button>
            <Button Name="buttonModify" VerticalAlignment="Top" Height="23" Width="75" Click="buttonModify_Click">Modify</Button>
            <Button Name="buttonDisplay" VerticalAlignment="Top" Height="23" Width="75" Click="buttonDisplay_Click">Display Data</Button>
            <Button Name="buttonClear" VerticalAlignment="Top" Height="23" Width="75" Click="buttonClear_Click">Clear Screen</Button>
        </StackPanel>
        <FlowDocumentPageViewer ClipToBounds="True" Margin="0,25,0,0">
            <FlowDocument Name="output" FontFamily="Lucida Console" FontSize="10" TextAlignment="Left" ColumnRuleBrush="Black" ColumnRuleWidth="1" IsOptimalParagraphEnabled="True" />
        </FlowDocumentPageViewer>
    </Grid>
</Window>
