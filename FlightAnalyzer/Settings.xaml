<Window x:Class="FlightAnalyzer.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:AXToolbox.Common;assembly=AXToolbox.Common"
    xmlns:validation="clr-namespace:AXToolbox.Model.Validation;assembly=AXToolbox.Model"        
    xmlns:converters="clr-namespace:AXToolbox.Model.Converters;assembly=AXToolbox.Model"        
    Title="Flight settings" 
        SizeToContent="WidthAndHeight" ShowInTaskbar="False" Topmost="True"
        WindowStartupLocation="CenterOwner" WindowStyle="ThreeDBorderWindow" ResizeMode="NoResize" 
        Closing="Window_Closed" Loaded="Window_Loaded" Icon="/FlightAnalyzer;component/balloon.ico">
    <Window.Resources>
        <converters:NotConverter x:Key="notConverter" />
        <converters:PointConverter x:Key="pointConverter" />
        <Style x:Key="defaultStyle">
            <Setter Property="Control.Margin" Value="5"/>
            <Setter Property="Control.Width" Value="200"/>
            <Setter Property="Control.VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <StackPanel Orientation="Vertical">
        <TextBlock 
            Style="{StaticResource labelStyle}">
            Data folder:
        </TextBlock>
        <TextBox Style="{StaticResource valueStyle}" Text="{Binding Path=DataFolder}"/>

        <TextBlock 
            Style="{StaticResource labelStyle}">
            Date
        </TextBlock>
        <Calendar 
            DisplayDate="{Binding Path=Date, Mode=OneWay}" 
            SelectedDate="{Binding Path=Date}"/>

        <TextBlock 
            Style="{StaticResource labelStyle}">
            Time of day
        </TextBlock>
        <StackPanel Orientation="Horizontal" Style="{StaticResource valueStyle}" >
            <RadioButton GroupName="rbGroup" Style="{StaticResource valueStyle}" Width="Auto" IsChecked="{Binding Path=Am,Mode=TwoWay}" Content="AM"  />
            <RadioButton GroupName="rbGroup" Style="{StaticResource valueStyle}" Width="Auto"  IsChecked="{Binding Path=Am, Converter={StaticResource notConverter}}" Content="PM" />
        </StackPanel>

        <TextBlock 
            Style="{StaticResource labelStyle}"
            ToolTip="This point datum and UTM zone will be used as default. This point position will be used to compute correct UTM coordinates from competition 4-figure coordinates This point altitude will be used as default altitude for goal declarations.">
            Reference point
        </TextBlock>
        <TextBox
            Style="{StaticResource valueStyle}"
            Tag="{Binding Path=ReferencePoint,Mode=OneWay}">
            <TextBox.Text>
                <Binding Path="ReferencePoint" Converter="{StaticResource pointConverter}">
                    <Binding.ValidationRules>
                        <validation:PointValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <TextBlock 
            Style="{StaticResource labelStyle}">
            QNH
        </TextBlock>
        <TextBox
            Style="{StaticResource valueStyle}" >
            <TextBox.Text>
                <Binding Path="Qnh">
                    <Binding.ValidationRules>
                        <validation:DoubleValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock 
                Style="{StaticResource labelStyle}">
                Allowed goals
            </TextBlock>
            <Button Height="22" Margin="0" 
                ToolTip="Add goal"
                Click="buttonAddGoal_Click">
                Add
            </Button>
            <Button Height="22" Margin="0"
                ToolTip="Delete goal"
                Click="buttonDelGoal_Click">
                Delete
            </Button>
            <Button Height="22" Margin="0"
                ToolTip="Load waypoint file (.wpt)"
                Click="buttonLoadGoals_Click">
                Load
            </Button>
            <Button Height="22" Margin="0"
                ToolTip="Delete all goals"
                Click="buttonClearGoals_Click">
                Clear
            </Button>
        </WrapPanel>
        <ListBox x:Name="listBoxGoals"
            Style="{StaticResource valueStyle}" 
            MinHeight="50" MaxHeight="100"
            ItemsSource="{Binding Path=AllowedGoals}"/>

        <TextBlock 
            Style="{StaticResource labelStyle}">
            Maximum distance from declared goal to road crossing
        </TextBlock>
        <TextBox
            Style="{StaticResource valueStyle}" >
            <TextBox.Text>
                <Binding Path="MaxDistToCrossing">
                    <Binding.ValidationRules>
                        <validation:DoubleValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button IsDefault="True" Margin="5" MinWidth="75" Click="buttonOk_Click">OK</Button>
            <Button Margin="5" MinWidth="75" Click="buttonReset_Click">Default</Button>
            <Button IsCancel="True" Margin="5" MinWidth="75" Click="buttonCancel_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
