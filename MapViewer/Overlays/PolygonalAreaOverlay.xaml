<maps:MapOverlay
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="AXToolbox.MapViewer.PolygonalAreaOverlay"
    xmlns:maps="clr-namespace:AXToolbox.MapViewer"
    IsHitTestVisible="False" >
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
        <Grid.CacheMode>
            <BitmapCache SnapsToDevicePixels="True"/>
        </Grid.CacheMode>
        <Polygon Name="area" Stroke="Black" Fill="Red" StrokeThickness="1" Points="-50,-70 -30,75 100,30 75,10" Opacity="0.25"/>
        <TextBlock Name="label" TextOptions.TextFormattingMode="Display">Label</TextBlock>
    </Grid>
</maps:MapOverlay>
