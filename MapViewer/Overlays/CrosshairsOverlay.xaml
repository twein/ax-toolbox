<maps:MapOverlay
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="AXToolbox.MapViewer.CrosshairsOverlay" 
    xmlns:maps="clr-namespace:AXToolbox.MapViewer"
    IsHitTestVisible="False" >
    <Grid >
        <Path Name="crosshairs" Width="30" Height="30" Margin="-15" HorizontalAlignment="Left" VerticalAlignment="Top"
              Stroke="Red" StrokeThickness="1" Stretch="UniformToFill"
              Data="M-5,0 L-1,0 M1,0 L5,0 M0,-5 L0,-1 M0,1 L0,5" />
        <Ellipse Name="circle" Width="30" Height="30" Margin="-15" HorizontalAlignment="Left" VerticalAlignment="Top"
                  Stroke="Red" />
    </Grid>
</maps:MapOverlay>